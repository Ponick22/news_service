{% extends 'base.html.twig' %}

{% block title %}LjДобавление новости{% endblock %}

{% block body %}
<div class="bg-light border rounded-3 shadow-sm p-3 pt-4">
        <h5 class="d-flex justify-content-center">Добавление новости</h5>
</div>
 <form class="form" method="post">    
    <div class="form-group my-3">
        <label for="title">Заголовок</label>
        <input type="text" class="form-control shadow-sm" name="title" id="title" required>      
    </div>
    <div class="form-group my-3">
        <label for="formFile" class="form-label">Превью новости</label>
        <input class="form-control" type="file" id="formFile" accept="image/jpeg,image/png">
    </div>
    <div class="form-group my-3">
        <label for="annotation">Аннотация</label>
        <textarea type="text" class="form-control shadow-sm" name="annotation" id="annotation"></textarea>
    </div>
    <div class="form-group my-3">
        <label for="content">Текст новости</label>
        <textarea type="text" class="form-control shadow-sm" name="content" id="content"></textarea>
    </div>
    <div class="form-group my-3">
        <label for="title">Дата публикации</label>
        <input type="date" class="form-control shadow-sm" name="title" id="title" value="{{date}}" required>      
    </div>
    <div class="d-grid d-lg-flex justify-content-lg-center my-4">
        <button type="submit" class="btn btn-outline-success shadow-sm">Добавить новость</button>
    </div>
</form>


{% endblock %}
