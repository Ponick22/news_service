{% extends 'base.html.twig' %}

{% block title %}Регистрация{% endblock %}

{% block body %}
<div class="row justify-content-center">
<form method="post" class="col-lg-6">   
    <h1 class="h3 mb-3 font-weight-normal">Регистрация пользователя</h1>
    <label for="inputEmail">Email</label>
    <input type="email" name="email" id="inputEmail" class="form-control mb-3" autocomplete="email" required autofocus>
    <label for="inputPassword">Пароль</label>
    <input type="password" name="password" id="inputPassword" class="form-control mb-4" autocomplete="current-password" required>
    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
    
    <div>
        <a href="{{path('app_login')}}" class="btn btn-secondary mb-4 ">Вход в аккаунт</a> 
    </div>   
    <button class="btn btn-lg btn-primary w-100" type="submit">
        Зарегистрироваться
    </button>
</form>
</div>
{% endblock %}
